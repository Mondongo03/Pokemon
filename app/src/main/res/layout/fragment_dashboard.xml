            android:id="@+id/dragonDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dragon2"/>





        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rocaDefensor"
            app:layout_constraintEnd_toStartOf="@id/voladorDefensor"
            android:id="@+id/tierraDefensor"
            android:layout_width="60dp"
