            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/psiquicoDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/psiquico"/>


        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bichoDefensor"
            app:layout_constraintEnd_toStartOf="@id/voladorDefensor"
            app:layout_constraintBottom_toTopOf="@id/tierraDefensor"
            android:id="@+id/rocaDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/roca"/>

