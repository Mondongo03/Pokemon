            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/siniestroDefensor"
            app:layout_constraintBottom_toTopOf="@id/rocaDefensor"
            android:id="@+id/bichoDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bicho"/>

        <ImageView
            app:layout_constraintStart_toEndOf="@id/bichoDefensor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/aguaDefensor"
            app:layout_constraintBottom_toTopOf="@id/rocaDefensor"
            android:id="@+id/siniestroDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/siniestro"/>

