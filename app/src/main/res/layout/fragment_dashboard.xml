            app:layout_constraintStart_toEndOf="@id/rocaAtacante"
            app:layout_constraintTop_toBottomOf="@id/bichoAtacante"
            app:layout_constraintEnd_toStartOf="@id/fantasmaAtacante"
            app:layout_constraintBottom_toTopOf="@id/tierraAtacante"
            android:id="@+id/voladorAtacante"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/volador2"/>

        <ImageView
            app:layout_constraintStart_toEndOf="@id/voladorAtacante"
            app:layout_constraintTop_toBottomOf="@id/bichoAtacante"
            app:layout_constraintBottom_toTopOf="@id/tierraAtacante"
            app:layout_constraintEnd_toStartOf="@id/fuegoAtacante"
            android:id="@+id/fantasmaAtacante"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fantasma2"/>

