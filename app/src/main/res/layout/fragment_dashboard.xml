            android:src="@drawable/volador2"/>

        <ImageView
            app:layout_constraintStart_toEndOf="@id/voladorDefensor"
            app:layout_constraintTop_toBottomOf="@id/bichoDefensor"
            app:layout_constraintBottom_toTopOf="@id/tierraDefensor"
            app:layout_constraintEnd_toStartOf="@id/fuegoDefensor"
            android:id="@+id/fantasmaDefensor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fantasma2"/>

        <ImageView
            app:layout_constraintStart_toEndOf="@id/fantasmaDefensor"
            app:layout_constraintTop_toBottomOf="@id/bichoDefensor"
            app:layout_constraintBottom_toTopOf="@id/tierraDefensor"
            app:layout_constraintEnd_toStartOf="@id/dragonDefensor"
            android:id="@+id/fuegoDefensor"
